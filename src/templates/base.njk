<!DOCTYPE html>
<html lang="{{ lang }}">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<!-- Canonical URL -->
		<link rel="canonical" href="https://lojeda.co/">

		<!-- Dynamic Meta Tags -->
		<title>{{ pageTitle }}</title>
		<meta name="title" content="{{ pageTitle }}">

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website">
		<meta property="og:url" content="https://lojeda.co/">
		<meta property="og:title" content="{{ pageTitle }}">

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image">
		<meta property="twitter:url" content="https://lojeda.co/">
		<meta property="twitter:title" content="{{ pageTitle }}">

		<script src="/scripts/i18n.js"></script>
		<script src="/scripts/language.js"></script>
	</head>
	<body style="margin: 0 auto; max-width: 80rem;">
		<header>
			<nav>
				<ul>
					<li>
						{% if lang == "es" %}
							<a href="/es">Inicio</a>
						{% else %}
							<a href="/">Home</a>
						{% endif %}
					</li>
					<li>
						{% if lang == "es" %}
							<a href="/es/blog">Blog</a>
						{% else %}
							<a href="/blog">Blog</a>
						{% endif %}
					</li>
					<li>
						{% if lang == "es" %}
							<a href="/es/feed">Feed</a>
						{% else %}
							<a href="/feed">Feed</a>
						{% endif %}
					</li>
					<li>
						{% if lang == "es" %}
							<a href="/es/sobre-mi">Sobre mi</a>
						{% else %}
							<a href="/about">About</a>
						{% endif %}
					</li>
					<li>
						{% if lang == "es" %}
							<a href="/es/contacto">Contacto</a>
						{% else %}
							<a href="/contact">Contact</a>
						{% endif %}
					</li>
				</ul>
				<div class="language-switcher">
					<button 
						data-lang="en" 
						{% if translationSlug %}data-translation="{{ translationSlug }}"{% endif %}
						aria-label="Switch to English">
						ðŸ‡ºðŸ‡¸
					</button>
					<button 
						data-lang="es" 
						{% if translationSlug %}data-translation="{{ translationSlug }}"{% endif %}
						aria-label="Switch to Spanish">
						ðŸ‡ªðŸ‡¸
					</button>
				</div>
			</nav>
		</header>

		<main>
			{% block content %}{% endblock %}
		</main>

		{% include "footer.njk" %}
	</body>
</html>