{% extends "templates/base.njk" %}

{% block content %}
  <article>
    <header>
      <h1>{{ title }}</h1>
      <p>
        <strong>Published on:</strong>
        {{ pubDate }}</p>
      <p>
        <strong>Tags:</strong>
      </p>
      <ul>
        {% for tag in tags %}
          <li>{{ tag }}</li>
        {% endfor %}
      </ul>

    </header>

    <section>
      {{ content | safe }}
    </section>
  </article>
{% endblock %}